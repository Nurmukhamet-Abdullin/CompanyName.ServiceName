@model OutdatedDevices
@{
    ViewData["Title"] = "Outdated Measurement Devices";
}

<h3>Electricity Meters</h3>
@if (Model.ElectricityMeters.Count() == 0)
{
    <div class="row">
        <div class="col text-center p-2">No Data</div>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ElectricityMeters[0].Number)</th>
                <th>Meter Type</th>
                <th>Transformation Ratio</th>
                <th>Verification Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ElectricityMeters)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Number)</td>
                    <td>@Html.DisplayFor(modelItem => item.MeterType)</td>
                    <td>@Html.DisplayFor(modelItem => item.VerificationDate)</td>
                </tr>
            }
        </tbody>
    </table>
}

